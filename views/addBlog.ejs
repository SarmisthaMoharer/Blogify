<!DOCTYPE html>
<html lang="en">
    <!-- <link href="../input.css" rel="stylesheet"> -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<head>
    <%- include('./partials/head.ejs') %>
    <title>Add New Blog</title>
</head>

<body>
    <%- include('./partials/nav.ejs') %>
    <form action="/blog" method="post" enctype="multipart/form-data" class="bg-gray-700 p-6 rounded shadow-md">
        <div class="mb-4">
            <label for="title" class="block text-sm font-medium mb-2">Title of the Blog</label>
            <input type="text" id="title" name="title" class="w-full px-3 py-2 text-gray-900 bg-gray-200 rounded" required>
        </div>
        <div class="mb-4">
            <label for="content" class="block text-sm font-medium mb-2">Content</label>
            <textarea id="content" name="content" rows="6" class="w-full px-3 py-2 text-gray-900 bg-gray-200 rounded" required></textarea>
        </div>
        <div class="mb-4">
            <label for="coverImage" class="block text-sm font-medium mb-2" >Cover Image</label>
            <input type="file" id="coverImage" name="coverImage" aria-describedby="coverImage" class="w-full px-3 py-2 bg-gray-200 rounded text-black" required>
        </div>
        <div>
            <button type="submit" class="px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded">Submit</button>
        </div>
    </form>
    <%- include('./partials/scripts.ejs') %>

    <script>
        const btn = document.querySelector('.mobile-menu-button');
        const menu = document.querySelector('.mobile-menu');

        btn.addEventListener('click', () => {
            menu.classList.toggle('hidden');
        });
    </script>
</body>

</html>